pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                // Explicitly pull code from GitHub and print branch
                git branch: 'main', url: 'https://github.com/your-org/messaging_app.git'
            }
        }

        stage('Install dependencies') {
            steps {
                sh 'pip3 install -r requirements.txt'
            }
        }

        stage('Run tests') {
            steps {
                sh 'pytest --junitxml=report.xml'
            }
        }

        stage('Publish Report') {
            steps {
                junit 'report.xml'
            }
        }
    }
}
